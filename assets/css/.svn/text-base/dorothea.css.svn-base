/**
 * Estilos generales
 */
body {
  background-color: #eeeeee;
  height: 100%;
  font-family: "Segoe UI", "Helvetica Neue", Arial, Verdana, Tahoma, sans-serif;
  font-size: 90%;
  margin: 0 auto;
  line-height: 1.5em;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  color: #a40802;
}
pre {
  background: #e9e7e8;
  padding: 2%;
  border: 1px solid #d1cccf;
}
ins {
  background: #e1ffdb;
  text-decoration: none;
}
q::before,
q::after {
  content: '"';
}
sub {
  vertical-align: sub;
  font-size: smaller;
}
sup {
  vertical-align: super;
  font-size: smaller;
}
del {
  background: url(http://localhost:8888/some/css/../img/strike.gif);
  text-decoration: none;
}
header#site-header {
  padding: 0% 20% 1% 20%;
}
header#site-header .tagline {
  color: #1c140d;
  font-size: 150%;
  font-style: italic;
}
header#site-header img {
  float: left;
}
.depth {
  display: block;
  padding: 0px;
  color: #a40802;
  font: bold 7em Arial, sans-serif;
  position: relative;
  margin: 0;
}
.depth:before {
  top: 1px;
  left: 1px;
}
.depth:after {
  top: 2px;
  left: 2px;
}
.depth:before,
.depth:after {
  content: attr(title);
  padding: 0px;
  color: rgba(255, 255, 255, 0.2);
  position: absolute;
}
#wrapper {
  width: 80%;
  background: #fff;
  *zoom: 1;
  margin: 3% auto;
  border: 1px solid #ccc;
}
#wrapper:before,
#wrapper:after {
  display: table;
  content: "";
  line-height: 0;
}
#wrapper:after {
  clear: both;
}
#main-navigation {
  *zoom: 1;
  margin-bottom: 5%;
  padding: 0 20%;
  border-bottom: 1px solid #ddd;
}
#main-navigation:before,
#main-navigation:after {
  display: table;
  content: "";
  line-height: 0;
}
#main-navigation:after {
  clear: both;
}
#main-navigation a {
  float: left;
  margin-right: 5%;
  color: #000000;
  border: none;
  padding: 1%;
}
#main-navigation a:hover {
  color: #D28184;
}
#main-navigation a.current {
  background: #e9e7e8;
  color: #808080;
  border-top: 1px solid #ddd;
  border-right: 1px solid #ddd;
  border-left: 1px solid #ddd;
  border-bottom: none;
}
#main-content {
  width: 60%;
  clear: both;
  margin: 0 auto 10% auto;
}

